<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="50dp"
    android:paddingStart="50dp">

    <TextView
        android:id="@+id/display_name_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/display_name_input"
        android:layout_alignParentStart="true"
        android:labelFor="@+id/display_name_input"
        android:paddingBottom="25dp"
        android:text="@string/display_name_text_hint"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/complete_signup_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/display_name_input"
        android:layout_marginTop="74dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:text="@string/complete_signup_btn_text" />

    <EditText
        android:id="@+id/display_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>